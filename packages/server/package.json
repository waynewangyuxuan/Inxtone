{
  "name": "@inxtone/server",
  "version": "0.1.0",
  "description": "HTTP server using Fastify",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch --onSuccess 'ROOT_DIR=${PWD%/packages/server}; node --env-file=\"$ROOT_DIR/.env.local\" dist/index.js'",
    "build": "tsup",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "start": "if [ -f ../../.env.local ]; then node --env-file=../../.env.local ./dist/index.js; elif [ -f .env.local ]; then node --env-file=.env.local ./dist/index.js; else node ./dist/index.js; fi"
  },
  "dependencies": {
    "@inxtone/core": "workspace:*",
    "fastify": "^4.28.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/static": "^7.0.0",
    "@fastify/websocket": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0"
  }
}
